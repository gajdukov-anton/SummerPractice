<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CardActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="600sp">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <TextView
                android:id="@+id/authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text=""
                android:textColor="@color/red_swipe" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <TextView
                android:id="@+id/available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text=""
                android:visibility="gone" />

            <View
                android:id="@+id/userBorder"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color"
                android:visibility="gone" />

            <TextView
                android:id="@+id/taken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text=""
                android:visibility="gone" />

            <View
                android:id="@+id/takenBorder"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color"
                android:visibility="gone" />

            <TextView
                android:id="@+id/returned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text=""
                android:visibility="gone" />

            <View
                android:id="@+id/returnedBorder"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/border_color"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cancelBooking"
        style="@style/Button"
        android:layout_width="95sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5sp"
        android:text="@string/cancelBooking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/getMoreInformation"
        style="@style/Button"
        android:layout_width="95sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/getMoreAboutBook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancelBooking"
        app:layout_constraintStart_toEndOf="@+id/takeBook" />

    <Button
        android:id="@+id/takeBook"
        style="@style/Button"
        android:layout_width="95sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5sp"
        android:text="@string/take"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>